{
  "family": "mettonapp-fargate-task",
  "containerDefinitions": [
    {
      "name": "Metton_python_container",
      "memoryReservation": 1024,
      "cpu": 682,
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mettonapp-fargate-task/python",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "python"
        }
      },
      "portMappings": [{
        "containerPort": 8000,
        "hostPort": 8000
      }],
      "dependsOn": [{
        "containerName": "Metton_mysql_container",
        "condition": "HEALTHY"
      }]
    },
    {
      "name": "Metton_nginx_container",
      "memoryReservation": 1024,
      "cpu": 682,
      "essential": false,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mettonapp-fargate-task/nginx",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "nginx"
        }
      }
    },
    {
      "name": "Metton_mysql_container",
      "memoryReservation": 1024,
      "cpu": 682,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3306,
          "hostPort": 3306
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mettonapp-fargate-task/mysql",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "mysql"
        }
      },
      "healthCheck": {
        "test": ["CMD", "mysql", "ping", "-h", "mysql"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "2048",
  "memory": "4096",
  "tags": [
    {
      "key": "Name",
      "value": "mettonapp-fargate-task"
    }
  ],
  "executionRoleArn": "EXECUTION_ROLE_ARN_PLACEHOLDER"
}
